<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:id="@+id/search_city_wrapper"
    		  android:layout_width="match_parent"
    		  android:layout_height="wrap_content"
    		  android:orientation="horizontal"
    		  android:padding="4dp">
	<android.support.v7.widget.AppCompatEditText android:id="@+id/city_name"
	    	  android:inputType="text"
			  android:layout_width="0dp"
			  android:layout_height="wrap_content"
              android:layout_marginRight="4dp"
			  android:hint="@string/search_city_placeholder"
			  android:layout_weight="1"
			  android:textSize="20sp"
			  android:singleLine="true"
			  android:textColor="#121212"/>
	<android.support.v7.widget.AppCompatButton android:id="@+id/find"
	    	android:layout_height="36dp"
	    	android:layout_width="36dp"
	    	android:layout_gravity="center_vertical"
	    	android:gravity="center_vertical"
	    	android:background="@drawable/search_icon"/>
</android.support.v7.widget.LinearLayoutCompat>
